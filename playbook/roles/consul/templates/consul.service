[Unit]
Description=Consul Agent
Wants=basic.target
After=basic.target network.target

[Service]
ExecStart=/bin/consul agent -config-file /etc/consul/consul.json -config-dir /etc/consul/consul.d
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
